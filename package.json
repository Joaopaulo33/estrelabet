{
  "name": "node-react",
  "version": "1.0.0",
  "scripts": {
    "client": "cd front-end && npm start",
    "server": "cd backend && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "init-client": "cd front-end && npm i",
    "init-server": "cd backend && npm i",
    "init": "npm i && npm run init-client && npm run init-server"
  },
  "dependencies": {
    "concurrently": "^3.5.0"
  }
}
